@using BootstrapSupport
@model Pureen.Web.Models.ListNewsModel

@using (@Html.BeginForm("PostNews", "Administrator", FormMethod.Post, new {@class = "form-horizontal"}))
{
        foreach (var property in Model.VisibleProperties())
        {
            if (property.Name == "Day" || property.Name == "Month" || property.Name == "Year" || property.Name == "UserName")
            {
                continue;
            }
            using (Html.ControlGroupFor(property.Name))
            {
                @Html.Label(property.Name, new { @class = "control-label" })
                <div class="controls">
                    @Html.Editor(property.Name, new { @class = "input-xlarge" })
                    @Html.ValidationMessage(property.Name, null, new { @class = "help-inline" })
                                                              
                </div>
            }
        }
        <button class="btn btn-success" type="submit">Post</button>
}
    